<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mainBackground">#fff</item>
        <item name="titleColor">#000</item>
        <item name="commonTextColor">#454545</item>
    </style>

    <style name="Mytheme" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/DarkcolorPrimary</item>
        <item name="colorPrimaryDark">@color/DarkPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mainBackground">@color/DarkPrimaryDark</item>
        <item name="titleColor">@color/colorAccent</item>
        <item name="commonTextColor">@color/DarkTextCommomColor</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.BSDialogStyle</item>
    </style>

    <style name="AppTheme.BSDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">300dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
